<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Setono\SyliusFacebookTrackingPlugin\Model\Pixel" table="setono_sylius_facebook_tracking__pixel">

        <indexes>
            <index columns="enabled"/>
        </indexes>
        
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="pixelId" type="string" unique="true"/>
        <field name="enabled" column="enabled" type="boolean"/>

        <many-to-many field="channels" target-entity="Sylius\Component\Channel\Model\ChannelInterface">
            <join-table name="setono_sylius_facebook_tracking__pixel_channels">
                <join-columns>
                    <join-column name="pixel_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="channel_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        
    </entity>

</doctrine-mapping>

{
    "name": "setono/sylius-facebook-tracking-plugin",
    "type": "symfony-bundle",
    "description": "Sylius plugin that tracks visitors and sends the data to Facebook",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "setono",
        "facebook"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3",
        "psr/event-dispatcher": "^1.0",
        "setono/tag-bag-bundle": "^2.0",
        "sylius/sylius": "^1.3",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^6.0",
        "phpunit/phpunit": "^8.0",
        "roave/security-advisories": "dev-master",
        "setono/code-quality-pack": "^1.4.1",
        "setono/sylius-behat-pack": "^0.1",
        "setono/sylius-tag-bag-plugin": "^1.0",
        "symfony/debug-bundle": "^5.1",
        "symfony/dotenv": "^5.1",
        "symfony/intl": "^4.4 || ^5.0",
        "symfony/web-profiler-bundle": "^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusFacebookTrackingPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Setono\\SyliusFacebookTrackingPlugin\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src",
        "check-style": "vendor/bin/ecs check --ansi spec src",
        "fix-style": "vendor/bin/ecs check --ansi spec src --fix",
        "phpspec": "vendor/bin/phpspec run --ansi",
        "phpunit": "vendor/bin/phpunit"
    }
}
